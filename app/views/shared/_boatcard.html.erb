<div class="card-link">
<%= link_to boat_path(boat) do %>
  <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path('download.jpg')%>);">
    <div class="card-category">
      <%= boat.category %>
      <p><%= boat.name %></p>
    </div>
    <div class="card-description">
      <% boat.rating.times do %>
        <i class="fas fa-star star-orange"></i>
      <% end %>
      <% (5 - boat.rating).times do %>
        <i class="fas fa-star star-grey"></i>
      <% end %>
    </div>
    <div class="card-cost">
      <strong><p>â‚¬<%= boat.price_per_hour %></p></strong>
    </div>
  </div>
<% end %>
</div>
