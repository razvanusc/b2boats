<div class="wrapper-light">
<h2 class="booking-h2">List of Bookings</h2>
<!--   <div class="application-controller"> -->
    <div class="container">

    <div class="container booking-container">

      <% @bookings.each do |b| %>

      <div class="row booking-body">
        <div class="col col-xs-12 booking-col">
          <div class="long-card">

            <div class="book-id">
              <p class="hd"> Owner </p>
              <p> <%= b.user.first_name[0] %>. <%= b.user.last_name %> </p>
            </div>
            <div class= "book-name">
              <p class="hd"> Boat Name</p>
              <p><%= b.boat.name %> </p>
            </div>
            <div class= "book-start">
              <p class="hd"> Start time</p>
              <p><%= b.start_time.strftime("%Y-%m-%d (%H:%M)") %> </p>
            </div>
            <div class= "book-end">
              <p class="hd"> End time</p>
              <p><%= b.end_time.strftime("%Y-%m-%d (%H:%M)") %> </p>
            </div>
            <div class= "book-price">
              <p class="hd"> Price (â‚¬)</p>
              <p><%= b.boat.price_per_hour %> </p>
            </div>
            <div class= "book-status">
              <p class="hd"> Status </p>
              <p><%= b.status %> </p>
            </div>
            <div>
              <%= link_to "Update", edit_booking_path(b), class:"book-btn"%>
            </div>
          </div>
        </div>
      </div>

       <%end %>

      </div>
    </div>
<!--   </div> -->
</div>
