<h2>Edit this booking</h2>
<div class="devise-input-form">
<h4> Boat: <strong> <%= @booking.boat.name %> <strong> </h4>
<h4>Owner: <strong> <%= @booking.user.first_name %>
  <%= @booking.user.last_name %> </strong></h4>
 <%= simple_form_for([@boat, @booking]) do |f| %>
   <%= f.input :start_time%>
   <%= f.input :end_time %>
   <%= f.input :status, collection: Booking.statuses.keys %>
   <%= f.submit "Update booking"%>
 <% end %>
</div>
