<div>
  <% @bookings.each do |booking| %>
  <p><%= booking.id %></p>
  <p><%= booking.start_time %></p>
  <p><%= booking.end_time %></p>
  <p><%= booking.status %></p>
  <p> <%= link_to "Edit this booking", edit_booking_path(booking) %></p>
  <% end %>
</div>
