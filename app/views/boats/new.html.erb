<h1>Add a boat</h1>

<div class="devise-input-form">

<%= simple_form_for(@boat) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :location %>
  <%= f.input :price_per_hour  %>
  <%= f.input :hours  %>
  <%= f.input :capacity  %>
  <%= f.input :category  %>
  <%= f.input :has_license, as: :radio_buttons%>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit %>

<% end %>

<%= link_to "Back to list",  boats_path, class: "style: margin-botton: 5px"%>

</div>
