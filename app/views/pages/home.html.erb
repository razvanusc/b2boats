<%= render "shared/banner" %>

<h2>List of Boats</h2>
<div class="container">
 <div class="row">
   <% @boats.each do |b| %>
     <div class="col-xs-12 col-md-4">
       <%= link_to boat_path(b) do %>
       <%= render "shared/card", boat: b %>
       <% end %>
     </div>
   <% end %>
 </div>
</div>
